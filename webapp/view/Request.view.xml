    <ui_table:Table 
        id="ui_table"
        selectionMode="MultiToggle"
        rows="{Request>/RequestOrder}" 
        width="auto">
        <!-- rows="{Request>/RequestOrder}" => 사용할 데이터를 행에 입력 -->

