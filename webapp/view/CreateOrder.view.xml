<mvc:View controllerName="project1.controller.CreateOrder"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m">
    <f:DynamicPage id="page"
        headerExpanded="false"
        showFooter="true"
        toggleHeaderOnTitleClick="true">
        <!-- footer 사용하고 싶을 시 showFooter true로 설정 -->
        <!-- headerExpanded : false => 헤더를 펼치지 않을 것임을 명시 -->
        <!-- 현재 상태는 헤더를 접은 상태에서의 내용만을 작성함 -->
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle1" >
                <f:heading>
                    <HBox id="_IDGenHBox1">
                        <Title id="_IDGenTitle1" text="물품 요청 생성" class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:heading>
                <!-- snappgedContent -->
                <!-- : 다이나믹 페이지는 헤더 접었을 때와 폈을 때 모양 다르게 가질 수 있음 -->
                <!-- 접었을 때 헤더의 어떤 부분이 나올 것인지를 결정하는 영역 + expendedContent도 결정 가능-->
                <f:snappedContent>
                    <form:SimpleForm id="_IDGenSimpleForm1" layout="ResponsiveGridLayout">
                        <form:content>
                            <VBox id="_IDGenVBox1">
                                <Label id="_IDGenLabel1" text="요청 번호"/>
                                <Input id="ReqNum"/>
                                <layoutData>
                                    <layout:GridData id="_IDGenGridData1" span="XL6 L6 M3 S12"/>
                                </layoutData>
                            </VBox>
                            <VBox id="_IDGenVBox2">
                                <Label id="_IDGenLabel2" text="요청 일자"/>
                                <DatePicker id="ReqDate" displayFormat="yyyy-MM"/>
                                <layoutData>
                                    <layout:GridData id="_IDGenGridData2" span="XL6 L6 M3 S12"/>
                                </layoutData>
                            </VBox>
                            <VBox id="_IDGenVBox3">
                                <Label id="_IDGenLabel3" text="요청 물품"/>
                                <Input id="ReqGood"/>
                                <layoutData>
                                    <layout:GridData id="_IDGenGridData3" span="XL6 L6 M3 S12"/>
                                </layoutData>
                            </VBox>
                            <VBox id="_IDGenVBox4">
                                <Label id="_IDGenLabel4" text="물품 개수"/>
                                <Input id="ReqQty"/>
                                <layoutData>
                                    <layout:GridData id="_IDGenGridData4" span="XL6 L6 M3 S12"/>
                                </layoutData>
                            </VBox>
                            <VBox id="_IDGenVBox5">
                                <Label id="_IDGenLabel5" text="요청자"/>
                                <Input id="Requester"/>
                                <layoutData>
                                    <layout:GridData id="_IDGenGridData5" span="XL6 L6 M3 S12"/>
                                </layoutData>
                            </VBox>
                            <VBox id="_IDGenVBox6">
                                <Label id="_IDGenLabel6" text="예상 가격"/>
                                <Input id="ReqPrice"/>
                                <layoutData>
                                    <layout:GridData id="_IDGenGridData6" span="XL6 L6 M3 S12"/>
                                </layoutData>
                            </VBox>
                            <VBox id="_IDGenVBox7">
                                <Label id="_IDGenLabel7" text="요청 사유"/>
                                <Input id="ReqReason"/>
                                <layoutData>
                                    <layout:GridData id="_IDGenGridData7" span="XL12 L12 M12 S12"/>
                                </layoutData>
                            </VBox>
                            <!-- 버튼 type에 따른 ui 확인 위한 부분 -->
                            <HBox id="_IDGenVBox8">
                                <Button text="hi" type="Accept"/>
                                <Button text="hi" type="Ghost"/>
                                <Button text="hi" type="Attention"/>
                                <Button text="hi" type="Back"/>
                                <Button text="hi" type="Critical"/>
                                <Button text="hi" type="Default"/>
                                <Button text="hi" type="Emphasized"/>
                                <Button text="hi" type="Negative"/>
                                <Button text="hi" type="Neutral"/>
                                <Button text="hi" type="Reject"/>
                                <Button text="hi" type="Success"/>
                                <Button text="hi" type="Transparent"/>
                                <Button text="hi" type="Unstyled"/>
                                <Button text="hi" type="Up"/>
                                <!-- <layoutData>
                                    <layout:GridData id="_IDGenGridData8" span="XL12 L12 M12 S12"/>
                                </layoutData> -->
                            </HBox>
                        </form:content>
                    </form:SimpleForm>

                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>

        <f:footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1" >
            <!-- 컨테이너의 표시 가능 영역에서 사용 가능한 공간이 충분하지 않은 경우 오른쪽에서 왼쪽으로 오버플로우 영역으로 이동 -->
            <!-- 기본으로 좌->우로 정렬 -->
                <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                <!-- ToolbarSpacer : 우측 정렬을 위해 사용 -->
                <Button id="_IDGenButton1" type="Emphasized" text="생성"/>
                <!-- 버튼 클릭 시 이전 페이지(Request)로 돌아감 -->
                <Button id="_IDGenButton2" type="Default" text="취소" press=".onBack"/>
            </OverflowToolbar>
        </f:footer>
    
    </f:DynamicPage>

</mvc:View>