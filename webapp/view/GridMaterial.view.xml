<mvc:View controllerName="project1.controller.GridMaterial"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    height="100%">
    <f:DynamicPage id="_IDGenPage1"
		class="sapUiContentPadding">
        <f:title>
			<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
				<f:heading>
					<Title id="_IDGenTitle2" text="부품 목록 - grid"/>
				</f:heading>
			</f:DynamicPageTitle>

		</f:title>
        <f:header>
            <f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
                <form:SimpleForm id="_IDGenSimpleForm1" layout="ResponsiveGridLayout">
                    <form:content>
                        <!-- VBox : Vertical Box, HBox : Horizon Box -->
                        <!-- VBox : 하나의 박스에 관련된 내용을 같이 담기 위한 선언, 방향 : vertical  -->
                        <VBox id="_IDGenVBox1">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <Label id="_IDGenLabel_7" text="부품 카테고리 :"/>
                            <!-- 입력받는 부분 -->
                            <Input id="category"/>
                            <!-- 화면에서 차지할 비율 설정 -->
                            <layoutData>
                                <layout:GridData id="_IDGenGridData1" span="XL2 L2 M6 S12"/>
                                <!-- 화면을 12등분 했을 때 해상도별 얼마나 차지할 것인지 결정
                                일반적으로 M사이즈 : 6, S사이즈는 12를 많이 사용 -->
                            </layoutData>
                        </VBox>
                        <!-- VBox : 하나의 박스에 관련된 내용을 같이 담기 위한 선언, 방향 : vertical  -->

                        <VBox id="_IDGenVBox2">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <Label id="_IDGenLabel_8" text="부품 코드 :"/>
                            <Input id="code" showValueHelp="true" valueHelpRequest=".onValueHelpRequest"/>
                            <!-- 화면에서 차지할 비율 설정 -->
                            <layoutData>
                                <layout:GridData id="_IDGenGridData2" span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox id="_IDGenVBox3">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <Label id="_IDGenLabel_9" text="부품명 :"/>
                            <Input id="name" showValueHelp="true" valueHelpRequest=".onValueHelpRequest"/>
                            <!-- 화면에서 차지할 비율 설정 -->
                            <layoutData>
                                <layout:GridData id="_IDGenGridData3" span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox id="_IDGenVBox4">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <Label id="_IDGenLabel_10" text="등록 일자 :"/>
                            <!-- date값을 받기 위한 태그 -->
                            <DatePicker id="date"
                                         displayFormat="yyyy-MM-dd"
                                        valueFormat="yyyy.MM.dd"/>
                                        <!-- default : 연-월-일 -->
                            <layoutData>
                                <layout:GridData id="_IDGenGridData4" span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        
                        <VBox id="_IDGenVBox5">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <Label id="_IDGenLabel_11" text="부품 생산 여부 :"/>
                            <!-- forceSelection="false"
                                selectedKey="{MaterialSelectOption>/SelectedStatus}" -->

                            <Select id="produce" width="100%"
                                items="{MaterialSelectOption>/ProduceList}">
                                <c:Item id="_IDGenItem1" key="{MaterialSelectOption>ProduceStatus}" text="{MaterialSelectOption>Value}" />
                            
                            </Select>
                            <!-- 12등분한 화면의 비율을 얼만큼 차지할지 결정 -->
                            <layoutData>
                                <layout:GridData id="_IDGenGridData5" span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>

                        <!-- VBox, HBox에 비해 상대적으로 유연한 box -->
                        <FlexBox id="_IDGenHBox_2" justifyContent="End">
                            <!-- 버튼 클릭 시 input value 값을 토대로 검색하는 함수 실행 -->
                            <Button id="_IDGenButton_5" text="검색" type="Emphasized" press=".onSearch"/>
                            <!-- 버튼 클릭 시 input value 초기화 -->
                            <Button id="_IDGenButton_4" text="초기화" type="Transparent" press=".onReset" class="sapUiTinyMarginBegin"/>
                            <layoutData>
                                <layout:GridData id="_IDGenGridData7"  span="XL12 L12 M12 S12"/>
                            </layoutData>
                        </FlexBox>                       
                    </form:content>
                </form:SimpleForm>

            </f:DynamicPageHeader>
        
        </f:header>

		<f:content>
			<t:Table id="ui_table"
                selectionBehavior="RowOnly"

				rows="{Material>/productList}"
				paste="onPaste"
				ariaLabelledBy="title">
				<t:extension> 
                    <OverflowToolbar id="_IDGenOverflowToolbar1" >
                    <!-- 왼쪽부터 자식 요소가 생성됨 -->
                        <Title id="TableName" text="협력 업체 목록"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer1"/><!-- 우측에 요소를 정렬하고 싶을 때 사용 -->
                        <!-- 버튼 클릭 시 물품 요청 생성 페이지로 이동 -->
                        <Button 
                            id="_IDGenButton7"
                            text="반응형 테이블"
                            press=".toResponsiveTable"
                            type="Transparent"/>
                            <Button 
                            id="_IDGenButton8"
                            text="부품 추가"
                            press=".onCreateMaterial"
                            type="Transparent"/>
                        <!-- 버튼 클릭 시 정렬 조건 설정 가능한 dialog 창 띄우는 함수 실행 -->
                        <Button id="_IDGenButton6"
                            icon="sap-icon://sort"
                            tooltip="정렬"
                            press=".onSort" 
                            type="Transparent"/>
                            <!-- press : 버튼 눌렀을 때 어떤 함수를 호출할 지 -->
                            <!-- tooltip : 버튼에 마우스 hover 시 표시해줄 값 선언, 버튼 용도 설명용  -->
                    </OverflowToolbar>
                </t:extension>
				<t:columns>
                	
					<t:Column filterProperty="category"
                        sortProperty="category"
                        id="_IDGenColumn1" hAlign="Center">
						<Label id="_IDGenLabel1" text="부품 카테고리" textAlign="Center" />
						<t:template>
							<Text id="_IDGenText1" text="{Material>category}" wrapping="false" />
						</t:template>
					</t:Column>
					<t:Column filterProperty="code"
                        sortProperty="code"
                        id="_IDGenColumn2" hAlign="Center">
						<Label id="_IDGenLabel2" text="부품 코드" textAlign="Center"/>
						<t:template>
							<Text id="_IDGenText2" text="{Material>code}" wrapping="false" />
						</t:template>
					</t:Column>
                    <t:Column filterProperty="name"
                        sortProperty="name"
                        id="_IDGenColumn21" hAlign="Center">
						<Label id="_IDGenLabel21" text="부품명" textAlign="Center"/>
						<t:template>
							<Text id="_IDGenText21" text="{Material>name}" wrapping="false" />
						</t:template>
					</t:Column>
                    <t:Column id="_IDGenColumn6"
						filterProperty="unit"
                        sortProperty="unit"
                        hAlign="Center"
						headerSpan="2,1">
						<t:multiLabels>
                            <Label id="_IDGenLabel12" text="부품 기본 정보"  width="100%"/>
						    <Label id="_IDGenLabel6" text="단위" textAlign="Center"/>
						</t:multiLabels>
						<t:template>
							<Text id="_IDGenText6" text="{Material>unit}"   />
						</t:template>
					</t:Column>
                    <t:Column id="_IDGenColumn11"
						filterProperty="cost"
                        sortProperty="cost"
                        hAlign="Center"
						headerSpan="2,1">
						<t:multiLabels>
                            <Label id="_IDGenLabel120" text="부품 기본 정보"  width="100%"/>
						    <Label id="_IDGenLabel26" text="부품 단가" textAlign="Center"/>
						</t:multiLabels>
						<t:template>
                        <!-- numberWithCommas -->
                        <!-- <ObjectStatus 
                            id="_IDGenObjectStatus1"
                            text="{
                                path:'Material>cost',
                                formatter:'.formatter.numberWithCommas'
                                }"/> -->
							<Text id="_IDGenText26" text="{Material>cost}"   />
						</t:template>
					</t:Column>
                    <t:Column id="_IDGenColumn8" hAlign="Center" 
                        filterProperty="produce"
                        sortProperty="produce">
						<Label id="_IDGenLabel8" text="부품 생산 여부" textAlign="Center" />
						<t:template>
							 <ObjectStatus 
                                id="_IDGenObjectStatus2"
                                active="true"
                                press="alert(&#36;{$source>/text} + ' pressed')"
                                text="{
                                    path:'Material>produce',
                                    formatter:'.formatter.materialStatus'
                                    }"
						        state = "{=${Material>produce} === 'A' ? 'Success' 
                                        : ${Material>produce}  === 'B' ? 'None' 
                                        : ${Material>produce}  === 'C' ? 'Warning' : 'Error'}"/>
						</t:template>
					</t:Column>
					<t:Column id="_IDGenColumn7"
						filterProperty="date"
                        sortProperty="date"
                        hAlign="Center">
                        <Label id="_IDGenLabel7" text="등록 일자" textAlign="Center" />

						<t:template>
							<Text id="_IDGenText7" text="{Material>date}" wrapping="false" />
						</t:template>
					</t:Column>
                    <t:Column id="_IDGenColumn9"
						filterProperty="etc"
                        sortProperty="etc"
                        hAlign="Center">
                        <Label id="_IDGenLabel3" text="비고" textAlign="Center" />

						<t:template>
							<Text id="_IDGenText9" text="{Material>etc}" wrapping="false"/>
						</t:template>
					</t:Column>
					
					
					
					
				</t:columns>
			</t:Table>
		</f:content>
	</f:DynamicPage>
    
</mvc:View>