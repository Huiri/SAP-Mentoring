<mvc:View controllerName="project1.controller.GridCompany"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.ui.table"
    xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    height="100%">
    <f:DynamicPage id="_IDGenPage1"

		class="sapUiContentPadding">
        <f:title>
			<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
				<f:heading>
					<m:Title id="_IDGenTitle2" text="협력 업체 목록 - grid(데스크탑 중심)"/>
				</f:heading>
			</f:DynamicPageTitle>

		</f:title>
        <f:header>
            <f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
                <form:SimpleForm id="_IDGenSimpleForm1" layout="ResponsiveGridLayout">
                    <form:content>
                        <!-- VBox : Vertical Box, HBox : Horizon Box -->
                        <!-- VBox : 하나의 박스에 관련된 내용을 같이 담기 위한 선언, 방향 : vertical  -->
                        <m:VBox id="_IDGenVBox1">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <m:Label id="_IDGenLabel_7" text="업체 코드 :"/>
                            <!-- 입력받는 부분 -->
                            <m:Input id="ComNum"/>
                            <!-- 화면에서 차지할 비율 설정 -->
                            <m:layoutData>
                                <layout:GridData id="_IDGenGridData1" span="XL2 L2 M6 S12"/>
                                <!-- 화면을 12등분 했을 때 해상도별 얼마나 차지할 것인지 결정
                                일반적으로 M사이즈 : 6, S사이즈는 12를 많이 사용 -->
                            </m:layoutData>
                        </m:VBox>
                        <!-- VBox : 하나의 박스에 관련된 내용을 같이 담기 위한 선언, 방향 : vertical  -->

                        <m:VBox id="_IDGenVBox2">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <m:Label id="_IDGenLabel_8" text="업체 명 :"/>
                            <m:Input id="ComName"/>
                            <!-- 화면에서 차지할 비율 설정 -->
                            <m:layoutData>
                                <layout:GridData id="_IDGenGridData2" span="XL2 L2 M6 S12"/>
                            </m:layoutData>
                        </m:VBox>
                        <m:VBox id="_IDGenVBox3">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <m:Label id="_IDGenLabel_9" text="담당자 :"/>
                            <m:Input id="ComPerson"/>
                            <!-- 화면에서 차지할 비율 설정 -->
                            <m:layoutData>
                                <layout:GridData id="_IDGenGridData3" span="XL2 L2 M6 S12"/>
                            </m:layoutData>
                        </m:VBox>
                        <m:VBox id="_IDGenVBox4">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <m:Label id="_IDGenLabel_10" text="요청 일자 :"/>
                            <!-- date값을 받기 위한 태그 -->
                            <m:DatePicker id="ComDate"
                                         displayFormat="yyyy-MM-dd"
                                        valueFormat="yyyy.MM.dd"/>
                                        <!-- default : 연-월-일 -->
                            <m:layoutData>
                                <layout:GridData id="_IDGenGridData4" span="XL2 L2 M6 S12"/>
                            </m:layoutData>
                        </m:VBox>
                        
                        <m:VBox id="_IDGenVBox5">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <m:Label id="_IDGenLabel_11" text="신용 상태 :"/>
                            <m:Select width="100%" id="Status">
                            <!-- select option 선언 -->
                                <c:Item id="_IDGenItem1" text="전체"/>
                                <!-- key값을 선언해주어야 filtering 가능 -->
                                <c:Item id="_IDGenItem2" text="신용" key="trust"/>
                                <c:Item id="_IDGenItem3" text="보류" key="hold"/>
                                <c:Item id="_IDGenItem4" text="주의" key="caution"/>
                            </m:Select>
                            <!-- 12등분한 화면의 비율을 얼만큼 차지할지 결정 -->
                            <m:layoutData>
                                <layout:GridData id="_IDGenGridData5" span="XL2 L2 M6 S12"/>
                            </m:layoutData>
                        </m:VBox>

                        <!-- VBox, HBox에 비해 상대적으로 유연한 box -->
                        <m:FlexBox id="_IDGenHBox_2" justifyContent="End">
                            <!-- 버튼 클릭 시 input value 값을 토대로 검색하는 함수 실행 -->
                            <m:Button id="_IDGenButton_5" text="검색" type="Emphasized" press=".onSearch"/>
                            <!-- 버튼 클릭 시 input value 초기화 -->
                            <m:Button id="_IDGenButton_4" text="초기화" type="Transparent" press=".onReset" class="sapUiTinyMarginBegin"/>
                            <m:layoutData>
                                <layout:GridData id="_IDGenGridData7"  span="XL12 L12 M12 S12"/>
                            </m:layoutData>
                        </m:FlexBox>                       
                    </form:content>
                </form:SimpleForm>

            </f:DynamicPageHeader>
        
        </f:header>
		<f:content>
			<Table id="ui_table"
				rows="{Vendor>/CompanyList}"
				selectionMode="MultiToggle"
                visibleRowCount="3"
				paste="onPaste"
				ariaLabelledBy="title">
				<extension> 
                    <m:OverflowToolbar id="_IDGenOverflowToolbar1" >
                    <!-- 왼쪽부터 자식 요소가 생성됨 -->
                        <m:Title id="TableName" text="협력 업체 목록"/>
                        <m:ToolbarSpacer id="_IDGenToolbarSpacer1"/><!-- 우측에 요소를 정렬하고 싶을 때 사용 -->
                        <!-- 버튼 클릭 시 물품 요청 생성 페이지로 이동 -->
                        <m:Button 
                            id="_IDGenButton7"
                            text="반응형 테이블"
                            press=".toResponsiveTable"
                            type="Transparent"/>
                            <m:Button 
                            id="_IDGenButton8"
                            text="협력 업체 추가"
                            press=".onCreateVendor"
                            type="Transparent"/>
                        <!-- 버튼 클릭 시 정렬 조건 설정 가능한 dialog 창 띄우는 함수 실행 -->
                        <m:Button id="_IDGenButton6"
                            icon="sap-icon://sort"
                            tooltip="정렬"
                            press=".onSort" 
                            type="Transparent"/>
                            <!-- press : 버튼 눌렀을 때 어떤 함수를 호출할 지 -->
                            <!-- tooltip : 버튼에 마우스 hover 시 표시해줄 값 선언, 버튼 용도 설명용  -->
                    </m:OverflowToolbar>
                </extension>
				<columns>
                	
					<Column filterProperty="ComNum"
                        sortProperty="ComNum"
                        id="_IDGenColumn1" hAlign="Center">
						<m:Label id="_IDGenLabel1" text="업체 코드" textAlign="Center" />
						<template>
							<m:Text id="_IDGenText1" text="{Vendor>ComNum}" wrapping="false" />
						</template>
					</Column>
					<Column filterProperty="ComName"
                        sortProperty="ComName"
                        id="_IDGenColumn2" hAlign="Center">
						<m:Label id="_IDGenLabel2" text="업체명" textAlign="Center"/>
						<template>
							<m:Text id="_IDGenText2" text="{Vendor>ComName}" wrapping="false" />
						</template>
					</Column>
					
                    <Column id="_IDGenColumn3"
						filterProperty="ComAddress"
                        sortProperty="ComAddress"
                        hAlign="Center"
						headerSpan="3,1">
						<multiLabels>
                            <m:Label id="_IDGenLabel17"  text="업체 기본 정보" width="100%"/>

							<m:Label id="_IDGenLabel18" text="주소" textAlign="Center" width="100%"/>
						</multiLabels>
						<template>
							<m:Text id="_IDGenText3" text="{Vendor>ComAddress}"/>
						</template>
					</Column>
                    <Column id="_IDGenColumn4"
						filterProperty="ComPerson"
                        sortProperty="ComPerson"
                        hAlign="Center"
						headerSpan="3,1">
						<multiLabels>
                            <m:Label id="_IDGenLabel11" text="업체 기본 정보" width="100%"/>

							<m:Label id="_IDGenLabel14" text="담당자" textAlign="Center" width="100%"/>
						</multiLabels>
						<template>
                            <m:Text id="_IDGenText4" text="{Vendor>ComPerson}" />
						</template>
					</Column>
                    <Column id="_IDGenColumn5"
						
                        hAlign="Center"
						headerSpan="2,1"
                        filterProperty="ComContact"
                        sortProperty="ComContact">
						<multiLabels>
                            <m:Label id="_IDGenLabel9" text="업체 기본 정보" width="100%"/>
							<m:Label id="_IDGenLabel10" text="담당자 연락처" textAlign="Center" width="100%"/>
						</multiLabels>
						<template>
                            <m:Text id="_IDGenText5" text="{Vendor>ComContact}" />
						</template>
					</Column>
                    <Column id="_IDGenColumn6"
						filterProperty="Good"
                        sortProperty="Good"
                        hAlign="Center"
						headerSpan="2,1">
						<multiLabels>
                            <m:Label id="_IDGenLabel12" text="업체 설명"  width="100%"/>
						    <m:Label id="_IDGenLabel6" text="거래 품목" textAlign="Center"/>
						</multiLabels>
						<template>
							<m:Text id="_IDGenText6" text="{Vendor>Good}"   />
						</template>
					</Column>
					<Column id="_IDGenColumn7"
						filterProperty="Date"
                        sortProperty="Date"
                        hAlign="Center"
						headerSpan="3,1">
						<multiLabels>
                            <m:Label id="_IDGenLabel13" text="업체 설명" width="100%"/>
						    <m:Label id="_IDGenLabel7" text="업체 등록일" textAlign="Center"/>
						</multiLabels>
						<template>
							<m:Text id="_IDGenText7" text="{Vendor>Date}" wrapping="false"/>
						</template>
					</Column>
					
					<Column id="_IDGenColumn8" hAlign="Center">
						<m:Label id="_IDGenLabel8" text="신용 상태" textAlign="Center" />
						<template>
							 <m:ObjectStatus 
                                id="_IDGenObjectStatus1"
                                active="true"
                                press="alert(&#36;{$source>/text} + ' pressed')"
                                text="{
                                    
                                    path:'Vendor>Status',
                                    formatter:'.formatter.creditStatus'
                                    }"
                                state = "{=${Vendor>Status} === 'trust' ? 'Success' : ${Vendor>Status}  === 'caution' ? 'None' : 'Error'}"/>
						</template>
					</Column>
					
					
				</columns>
			</Table>
		</f:content>
	</f:DynamicPage>
    
</mvc:View>