<mvc:View
	controllerName="project1.controller.ResponsiveCompany"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    height="100%"
	xmlns="sap.m">
	<f:DynamicPage id="_IDGenPage1"
		toggleHeaderOnTitleClick="true"
		class="sapUiContentPadding">
		<f:title>
			<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
				<f:heading>
					<Title id="_IDGenTitle2" text="협력 업체 목록 - 반응형 테이블"/>
				</f:heading>
			</f:DynamicPageTitle>

		</f:title>
        <f:header>
            <f:DynamicPageHeader  id="_IDGenDynamicPageHeader1" pinnable="true">
                <form:SimpleForm id="_IDGenSimpleForm1" layout="ResponsiveGridLayout">
                    <form:content>
                        <!-- VBox : Vertical Box, HBox : Horizon Box -->
                        <!-- VBox : 하나의 박스에 관련된 내용을 같이 담기 위한 선언, 방향 : vertical  -->
                        <VBox id="_IDGenVBox1">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <Label id="_IDGenLabel_7" text="업체 코드 :"/>
                            <!-- 입력받는 부분 -->
                            <Input id="ComNum"/>
                            <!-- 화면에서 차지할 비율 설정 -->
                            <layoutData>
                                <layout:GridData id="_IDGenGridData1" span="XL2 L2 M6 S12"/>
                                <!-- 화면을 12등분 했을 때 해상도별 얼마나 차지할 것인지 결정
                                일반적으로 M사이즈 : 6, S사이즈는 12를 많이 사용 -->
                            </layoutData>
                        </VBox>
                        <!-- VBox : 하나의 박스에 관련된 내용을 같이 담기 위한 선언, 방향 : vertical  -->

                        <VBox id="_IDGenVBox2">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <Label id="_IDGenLabel_8" text="업체 명 :"/>
                            <Input id="ComName"/>
                            <!-- 화면에서 차지할 비율 설정 -->
                            <layoutData>
                                <layout:GridData id="_IDGenGridData2" span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox id="_IDGenVBox3">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <Label id="_IDGenLabel_9" text="담당자 :"/>
                            <Input id="ComPerson"/>
                            <!-- 화면에서 차지할 비율 설정 -->
                            <layoutData>
                                <layout:GridData id="_IDGenGridData3" span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox id="_IDGenVBox4">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <Label id="_IDGenLabel_10" text="업체 등록일 :"/>
                            <!-- date값을 받기 위한 태그 -->
                            <DatePicker id="ComDate"
                                        displayFormat="yyyy-MM-dd"
                                        valueFormat="yyyy.MM.dd"/>
                                        <!-- default : 연-월-일 -->
                            <layoutData>
                                <layout:GridData id="_IDGenGridData4" span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        
                        <VBox id="_IDGenVBox5">
                        <!-- input에 넣어야 할 값 설명 위한 label 값 -->
                            <Label id="_IDGenLabel_11" text="신용 상태 :"/>
                            <Select width="100%" id="Status">
                            <!-- select option 선언 -->
                                <c:Item id="_IDGenItem1" text="전체"/>
                                <!-- key값을 선언해주어야 filtering 가능 -->
                                <c:Item id="_IDGenItem2" text="신용" key="trust"/>
                                <c:Item id="_IDGenItem3" text="보류" key="hold"/>
                                <c:Item id="_IDGenItem4" text="주의" key="caution"/>
                            </Select>
                            <!-- 12등분한 화면의 비율을 얼만큼 차지할지 결정 -->
                            <layoutData>
                                <layout:GridData id="_IDGenGridData5" span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>

                        <!-- VBox, HBox에 비해 상대적으로 유연한 box -->
                        <FlexBox id="_IDGenHBox_2" justifyContent="End">
                            <!-- 버튼 클릭 시 input value 값을 토대로 검색하는 함수 실행 -->
                            <Button id="_IDGenButton_5" text="검색" type="Emphasized" press=".onSearch"/>
                            <!-- 버튼 클릭 시 input value 초기화 -->
                            <Button id="_IDGenButton_4" text="초기화" type="Transparent" press=".onReset" class="sapUiTinyMarginBegin"/>
                            <layoutData>
                                <layout:GridData id="_IDGenGridData7"  span="XL12 L12 M12 S12"/>
                            </layoutData>
                        </FlexBox>                       
                    </form:content>
                </form:SimpleForm>

            </f:DynamicPageHeader>
        
        </f:header>
		<f:content>
	<Table
		width = "100%"
		id="ui_table"
		inset="false"
		items="{
			path: 'Vendor>/CompanyList',
			sorter: {
				path: 'Vendor>ComName'
			}
		}">
		<headerToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar1">
				<content>
					<Title id="_IDGenTitle1" text="협력 업체 목록" level="H2"/>
					<ToolbarSpacer id="_IDGenToolbarSpacer1" />
					
					<Button id="_IDGenButton1" text="그리드 테이블" press=".toGridTable"
                            type="Transparent"/>
					<!-- 버튼 클릭 시 정렬 조건 설정 가능한 dialog 창 띄우는 함수 실행 -->
					<Button id="_IDGenButton6"
						icon="sap-icon://sort"
						tooltip="정렬"
						press=".onSort" 
						type="Transparent"/>
						<!-- press : 버튼 눌렀을 때 어떤 함수를 호출할 지 -->
						<!-- tooltip : 버튼에 마우스 hover 시 표시해줄 값 선언, 버튼 용도 설명용  -->
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column id="_IDGenColumn1">
				<Text id="_IDGenText1" text="업체 코드" />
			</Column>
			<Column id="_IDGenColumn2">
				<Text id="_IDGenText2" text="업체명" />
			</Column>
			<Column id="_IDGenColumn3" hAlign="End">
				<Text id="_IDGenText3" text="주소" textAlign="End"/>
			</Column>
			<Column id="_IDGenColumn4">
				<Text id="_IDGenText4" text="담당자" />
			</Column>
            <Column id="_IDGenColumn5" hAlign="Center">
				<Text id="_IDGenText5" text="담당자 연락처" textAlign="Center"/>
			</Column>
            <Column id="_IDGenColumn6" hAlign="End">
				<Text id="_IDGenText6" text="거래품목" />
			</Column>
            <Column id="_IDGenColumn7" hAlign="Center">
				<Text id="_IDGenText7" text="업체 등록일" />
			</Column>
            <Column id="_IDGenColumn8" hAlign="End">
				<Text id="_IDGenText8" text="신용 상태" />
			</Column>
		</columns>
		<items>
			<ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle">
				<cells>
					<Text id="_IDGenText9"
						text="{Vendor>ComNum}" />
                    <Text id="_IDGenText10"
						text="{Vendor>ComName}" />
					<Text id="_IDGenText11"
						text="{Vendor>ComAddress}" />
                    <Text id="_IDGenText12"
						text="{Vendor>ComPerson}" />
                    <Text id="_IDGenText13"
						text="{Vendor>ComContact}" />
                    <Text id="_IDGenText14"
						text="{Vendor>Good}" />
                    <Text id="_IDGenText15"
						text="{Vendor>Date}" />
					<ObjectStatus 
						id="_IDGenObjectStatus1"
						active="true"
						press="alert(&#36;{$source>/text} + ' pressed')"
						text="{
							
							path:'Vendor>Status',
							formatter:'.formatter.creditStatus'
							}"
						state = "{=${Vendor>Status} === 'trust' ? 'Success' : ${Vendor>Status}  === 'caution' ? 'None' : 'Error'}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	</f:content>
	</f:DynamicPage>
</mvc:View>