<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
        id="SortDialog"
        confirm="onConfirmSortDialog"
        title="협력 업체 정렬">
        <!-- //Dialog 화면에 사용할 함수 및 제목 선언
        //confirm, 즉 확인 버튼 누를 시 실행할 함수 선언 -->
         <sortItems><!--//정렬할 항목들 선언 -->
            <ViewSettingsItem id="_IDGenViewSettingsItem1" text="업체 코드" key="ComNum" selected="true"/>
            <ViewSettingsItem id="_IDGenViewSettingsItem2" text="업체 명" key="ComName"/>
            <ViewSettingsItem id="_IDGenViewSettingsItem3" text="주소" key="ComAddress"/>
            <ViewSettingsItem id="_IDGenViewSettingsItem4" text="담당자" key="ComPerson"/>
            <ViewSettingsItem id="_IDGenViewSettingsItem5" text="담당자 연락처" key="ComContact"/>
            <ViewSettingsItem id="_IDGenViewSettingsItem6" text="거래품목" key="Good"/>
            <ViewSettingsItem id="_IDGenViewSettingsItem7" text="업체 등록일" key="Date"/>
            <ViewSettingsItem id="_IDGenViewSettingsItem8" text="신용 상태" key="Status"/>
        </sortItems>
        
    </ViewSettingsDialog>
</core:FragmentDefinition>
