<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
        id="helloDialog"
		title="Loading Data">
        <content>
            <core:Icon 
                id="_IDGenIcon1" 
                src="sap-icon://e-care"
                size="5rem"
                class="sapUiMediumMargin"/>
        </content>
        <!-- beginButton : button을 우측 하단에 고정하기 위한 태그 -->
        <beginButton>
            <Button 
                id="helloDialog_btn"
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"/>

        </beginButton>
    </Dialog>
</core:FragmentDefinition>